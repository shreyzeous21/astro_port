---
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillCard from "../components/SkillCard.astro";
import Title from "../components/Title.astro";
const {
  name = "shrey sadhukhan",
  title = "Minimalist Portfolio",
  button = "contact",
  link = "mailto:shrey.sadhukhan21@gmail.com",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Minimalist Portfolio" />
    <title>{title}</title>
  </head>
  <body>
    <header><Navbar /></header>
    <main>
      <section class="about">
        <img
          src="https://avatars.githubusercontent.com/u/79036238?v=4"
          alt="profile picture"
        />
        <article>
          <p>Hi!, I'm {name}</p>
          <Title text="Software Developer from Medellin" />
        </article>
        <Button
          message="Latest Posts"
          icon="/external.svg"
          link="https://dev.to/shreyzeous21"
        />
      </section>
      <section class="skills">
        <Title text="Skilss & Technologies" />
        <section>
          <SkillCard
            title="Frontend Development"
            description="Developing websites with JavaScript and the best Frameworks like React, Next, Vue, and Astro"
            icon="/design.svg"
          />
          <SkillCard
            title="Backend Development"
            description="Databases like PostgreSQL and MongoDB. Developing APIs with JavaScript and Python"
            icon="/server.svg"
          />
          <SkillCard
            title="Automation"
            description="Automating processes with Python and its different libraries"
            icon="/python.svg"
          />
        </section>
      </section>
      <section class="work">
        <Title text="My Work" />
        <section>
          <ProjectCard
            title="Markdown Web Editor"
            description="Simple and Minimalist Markdown Web Editor"
            link="https://md-writer.vercel.app/"
          />
          <ProjectCard
            title="Notion Clone Editor"
            description="Simple and Minimalist Notes Sharer with live preview and live publish web support"
            link="https://notion-clone-rust.vercel.app/"
          />
          <ProjectCard
            title=" Linktree Shrey "
            description="Manage my all the profile"
            link="https://shrey-contact-me.vercel.app/"
          />
        </section>
      </section>
      <section class="contact">
        <Title text="Tell me about your next project" />
        <button class="ui-btn">
          <span> <a class="no" href={link}>{button}</a> </span>
        </button>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .no {
    text-decoration: none;
    color: yellow;
    text-transform: uppercase;
  }
  .ui-btn {
    --btn-default-bg: rgb(41, 41, 41);
    --btn-padding: 15px 20px;
    --btn-hover-bg: rgb(51, 51, 51);
    --btn-transition: 0.3s;
    --btn-letter-spacing: 0.1rem;
    --btn-animation-duration: 1.2s;
    --btn-shadow-color: rgba(0, 0, 0, 0.137);
    --btn-shadow: 0 2px 10px 0 var(--btn-shadow-color);
    --hover-btn-color: #fac921;
    --default-btn-color: #fff;
    --font-size: 16px;
    /* ðŸ‘† this field should not be empty */
    --font-weight: 600;
    --font-family: Menlo, Roboto Mono, monospace;
    /* ðŸ‘† this field should not be empty */
  }

  /* button settings ðŸ‘† */

  .ui-btn {
    box-sizing: border-box;
    padding: var(--btn-padding);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--default-btn-color);
    font: var(--font-weight) var(--font-size) var(--font-family);
    background: var(--btn-default-bg);
    border: none;
    cursor: pointer;
    transition: var(--btn-transition);
    overflow: hidden;
    box-shadow: var(--btn-shadow);
  }

  .ui-btn span {
    letter-spacing: var(--btn-letter-spacing);
    transition: var(--btn-transition);
    box-sizing: border-box;
    position: relative;
    background: inherit;
  }

  .ui-btn span::before {
    box-sizing: border-box;
    position: absolute;
    content: "";
    background: inherit;
  }

  .ui-btn:hover,
  .ui-btn:focus {
    background: var(--btn-hover-bg);
  }

  .ui-btn:hover span,
  .ui-btn:focus span {
    color: var(--hover-btn-color);
  }

  .ui-btn:hover span::before,
  .ui-btn:focus span::before {
    animation: chitchat linear both var(--btn-animation-duration);
  }

  @keyframes chitchat {
    0% {
      content: "#";
    }

    5% {
      content: ".";
    }

    10% {
      content: "^{";
    }

    15% {
      content: "-!";
    }

    20% {
      content: "#$_";
    }

    25% {
      content: "â„–:0";
    }

    30% {
      content: "#{+.";
    }

    35% {
      content: "@}-?";
    }

    40% {
      content: "?{4@%";
    }

    45% {
      content: "=.,^!";
    }

    50% {
      content: "?2@%";
    }

    55% {
      content: "\;1}]";
    }

    60% {
      content: "?{%:%";
      right: 0;
    }

    65% {
      content: "|{f[4";
      right: 0;
    }

    70% {
      content: "{4%0%";
      right: 0;
    }

    75% {
      content: "'1_0<";
      right: 0;
    }

    80% {
      content: "{0%";
      right: 0;
    }

    85% {
      content: "]>'";
      right: 0;
    }

    90% {
      content: "4";
      right: 0;
    }

    95% {
      content: "2";
      right: 0;
    }

    100% {
      content: "";
      right: 0;
    }
  }
  * {
    margin: 0;
    padding: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    box-sizing: border-box;
  }

  main {
    margin: 50px auto 0 auto;
    max-width: 1020px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 100px;
  }

  .about {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 40px;
    width: 100%;
    height: calc(100vh - 50px);
    text-align: center;
    border-bottom: 1px solid rgb(30, 30, 30, 0.3);
    padding: 0 20px;
  }

  .about > img {
    width: 150px;
    border-radius: 9999px;
    object-fit: cover;
  }

  .about > article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .skills {
    display: flex;
    flex-direction: column;
    gap: 50px;
    width: 100%;
    align-items: center;
    border-bottom: 1px solid rgb(30, 30, 30, 0.3);
    padding: 0px 20px 100px 20px;
  }

  .skills > section {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .work {
    display: flex;
    flex-direction: column;
    gap: 50px;
    width: 100%;
    align-items: center;
    border-bottom: 1px solid rgb(30, 30, 30, 0.3);
    padding: 0px 20px 100px 20px;
  }

  .work > section {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .contact {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
    width: 100%;
    padding: 0px 20px 100px 20px;
  }

  @media screen and (max-width: 700px) {
    main {
      margin: 0 auto;
    }

    .about {
      height: 80vh;
    }

    .about > img {
      width: 100px;
    }
  }
</style>
